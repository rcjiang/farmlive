/**index.wxss**/
page  view{
  box-sizing: border-box;
}

.grid-fluid{
  background: #f6f6f6;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.lib{
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  width: 50%;
  background-color: white;
  border: 2px solid #f6f6f6;
}

.lib image{
  height: 100px;
  width: 100%;
}

.lib > view{
  display: block;
  width: 100%;
  padding: 5px 10px;
  text-align: left;
}

.search-holder .input-search {
  background-color: #f6f6f6;
}

.scan {
  background-size: contain;
  background-position: center;
  background-image: url("data:image/png;base64,");
}

.search-holder .btn-plain {
  position: absolute;
  top: 14px;
  right: 16px;
}