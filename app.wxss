/**app.wxss**/
page{
  font-size: 13px;
}
.h-100{
  height: 100%;
}
.p-sm{
  padding: 10px;
}
.p-x-xs{
  padding: 0 5px;
}
.p-x-sm{
  padding: 0 10px;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

.full{
  position: fixed;
  width: 100%;
  height: 100%;
}

.flex{
  display: flex;
  flex-direction: row;
}
.flex-grow{
  flex-grow: 1
}
.flex-fix{
  flex-grow: 0;
  flex-shrink: 0;
}

.flex-20{
  flex-basis: 20%;
}

.flex-y{
  display: flex;
  flex-direction: column;
}

.grid-fluid{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.search-holder{
  position: relative;
  display: flex;
  padding: 10px;
}
.search-holder input{
  flex-grow: 1;
  padding: 2px 10px 2px 30px;
  border-radius: 26px;
  background-color: white;
}
.search-holder::before{
  position: absolute;
  display: block;
  content: '';
  width: 16px;
  height: 16px;
  left: 16px;
  top: 16px;
  background-size: cover;
  background-image: url("data:image/png;base64,");
}

.nav{
  display: flex;
  padding: 0 10px;
  background-color:white;
  box-shadow: 0 1px 1px rgba(0,0,0, 0.2);
}
.nav > text{
  display: block;
  padding: 10px;
  min-width: 50px;
  text-align: center;
  border-bottom: 2px solid transparent;
}
.nav > .active{
  color: #09bb07;
  border-bottom-color: #09bb07;
}

.icon-xs{
  height: 16px;
  width: 16px;
}

.mirror{
   transform: rotateX(180deg)
}

.btn-plain {
  padding: 0;
  line-height: 1;
  height: 20px;
  width: 20px;
  z-index: 100;
}